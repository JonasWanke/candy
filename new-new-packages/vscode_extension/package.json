{
  "name": "candy",
  "displayName": "🍭 Candy",
  "description": "Candy language support",
  "publisher": "🍭 Candy",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/candy-lang/candy.git",
    "directory": "new-new-packages/vscode_extension"
  },
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:candy",
    "workspaceContains:**/*.candy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "🍭 Candy",
      "properties": {
        "candy.languageServerCommand": {
          "type": "string",
          "default": "",
          "markdownDescription": "Command to start the 🍭 Candy language server. If empty, we'll attempt to find the 🍭 Candy executable in the `PATH` environment variable.",
          "scope": "machine-overridable"
        }
      }
    },
    "configurationDefaults": {
      "[candy]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
      }
    },
    "languages": [
      {
        "id": "candy",
        "extensions": [
          ".candy"
        ],
        "aliases": [
          "🍭 Candy"
        ],
        "configuration": "./declarative/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0-next.12"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
