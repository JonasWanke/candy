{
  "name": "candy",
  "displayName": "Candy",
  "description": "Candy language support",
  "publisher": "Candy",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/JonasWanke/candy.git",
    "directory": "packages/vscode_extension"
  },
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:candy",
    "workspaceContains:**/*.candy",
    "workspaceContains:**/candyspec.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "candy.typeLabels",
        "description": "The color of type annotations shown after properties without an explicit type. If not supplied, the color for `tab.inactiveForeground` will be used.",
        "defaults": {
          "dark": "tab.inactiveForeground",
          "light": "tab.inactiveForeground",
          "highContrast": "tab.inactiveForeground"
        }
      }
    ],
    "commands": [],
    "configuration": {
      "title": "üç≠¬†Candy",
      "properties": {
        "candy.candyPath": {
          "type": "string",
          "description": "Path to the üç≠¬†Candy standard library.",
          "scope": "machine-overridable"
        },
        "candy.languageServerCommand": {
          "type": "string",
          "default": "",
          "markdownDescription": "Command to start the üç≠¬†Candy language server. If empty, we'll attempt to find the üç≠¬†Candy executable in the `PATH` environment variable.",
          "scope": "machine-overridable"
        }
      }
    },
    "configurationDefaults": {
      "[candy]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
      }
    },
    "grammars": [
      {
        "language": "candy",
        "scopeName": "source.candy",
        "path": "./declarative/tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "candy",
        "extensions": [
          ".candy"
        ],
        "aliases": [
          "Candy"
        ],
        "configuration": "./declarative/language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "candy",
        "path": "./declarative/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0-next.12"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
