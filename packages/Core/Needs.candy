type = use ".Type"
panic = (use ".Panic").panic
isOfType = type.is

needs condition =
  # TODO: Replace this function with a specially handled keyword.
  ✨.ifElse (isOfType condition Bool) {} { panic "`needs` was called with the wrong arguments." }
  ✨.ifElse
    condition
    {}
    { panic "A function was called with the wrong arguments." }

check condition =
  needs (isOfType condition Bool)
  ✨.ifElse
    condition
    {}
    { panic "A check didn't succeed" }
