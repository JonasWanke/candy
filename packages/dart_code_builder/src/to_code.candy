impl UserType: ToCode {
  fun toCode(): String {
    mut let s = name
    if prefix is Some {
      s = "{prefix.unwrap()}.{s}"
    }
    if (parameters as Iterable).isNotEmpty() {
      s = "{s}<{(parameters as Iterable).join(", ")}>"
    }
    s
  }
}
