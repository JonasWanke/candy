impl Literal: ToCode {
  fun toCode(): String {
    "{this}"
  }
}
impl Call: ToCode {
  fun toCode(): String {
    mut let s = (target as ToCode).toCode()
    if (typeArguments as Iterable).isNotEmpty() {
      s = "{s}<{(typeArguments as Iterable).join(", ")}>"
    }
    let arguments = (positionalArguments as Iterable)
      .map<String>({ "{it}, " })
      .followedBy(
        namedArguments
          .entries()
          .map<String>({ "{it.first}: {it.second}" })
      )
      .join(", ")
    s = "{s}({arguments})"
  }
}
