impl DartConst: DartToCode {
  fun toCode(): String { "const" }
}

impl DartGetter: DartToCode {
  fun toCode(): String {
    mut let s = "{(type as DartToCode).toCode()} get {name}"
    if body is Some {
      s = "{s} {(body.unwrap() as DartToCode).toCode()}"
    }
    if body.map<Bool>({ it is DartInlineBody }).orElse({ true }) {
      s = "{s};"
    }
    s
  }
}
impl DartSetter: DartToCode {
  fun toCode(): String {
    mut let s = "set {name}({(parameter as DartToCode).toCode()})"
    if body is Some {
      s = "{s} {(body.unwrap() as DartToCode).toCode()}"
    }
    if body.map<Bool>({ it is DartInlineBody }).orElse({ true }) {
      s = "{s};"
    }
    s
  }
}

impl DartBody: DartToCode
impl DartInlineBody: DartToCode {
  fun toCode(): String {
    "=> {(expression as DartToCode).toCode()}"
  }
}
impl DartBlock: DartToCode {
  fun toCode(): String {
    let statementsCode = (statements as Iterable<DartStatement>)
      .map<String>({ (it as DartToCode).toCode() })
      .join("\n")
    "\üëç\n{indent(statementsCode)}\n}"
  }
}

impl DartType: DartToCode
impl DartNamedType: DartToCode {
  fun toCode(): String {
    mut let s = (name as DartToCode).toCode()
    if (typeArguments as Iterable).isNotEmpty() {
      let generics = (typeArguments as Iterable<DartType>)
        .map<String>({ (it as DartToCode).toCode() })
        .join(", ")
      s = "{s}<{generics}>"
    }
    s
  }
}
impl DartFunctionType: DartToCode {
  fun toCode(): String {
    mut let s = "Function"
    if _returns is Some {
      s = "{(_returns.unwrap() as DartToCode).toCode()} {s}"
    }
    let parameters = parametersToCode(
      (parameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
      (positionalParameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
      (namedParameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
    )
    "{s}(parameters)"
  }
}

impl DartExpression: DartToCode
impl DartIdentifier: DartToCode {
  fun toCode(): String {
    mut let s = name
    if prefix is Some {
      s = "{prefix}.{s}"
    }
    s
  }
}
impl DartNullLiteral: DartToCode {
  fun toCode(): String { "null" }
}
impl DartStringLiteral: DartToCode {
  fun toCode(): String { "\ü¶Ñ{value}\ü¶Ñ" }
}
impl DartIntLiteral: DartToCode {
  fun toCode(): String { "{value}" }
}
impl DartBoolLiteral: DartToCode {
  fun toCode(): String { "{value}" }
}
impl DartCall: DartToCode {
  fun toCode(): String {
    mut let s = (target as DartToCode).toCode()
    let typeArgumentsCode = (typeArguments as Iterable<DartType>)
      .map<String>({ (it as DartToCode).toCode() })
      .join(", ")
    if !(typeArgumentsCode == "") {
      s = "{s}<{typeArgumentsCode}>"
    }
    let arguments = (positionalArguments as Iterable<DartExpression>)
      .map<String>({ (it as DartToCode).toCode() })
      .followedBy(
        namedArguments
          .entries()
          .map<String>({ "{it.first}: {(it.second as DartToCode).toCode()}" })
      )
      .join(", ")
    s = "{s}({arguments})"
  }
}
impl DartNavigation: DartToCode {
  fun toCode(): String { "{(target as DartToCode).toCode()}.{property}" }
}
impl DartBinaryOperator: DartToCode {
  fun toCode(): String { "{(left as DartToCode).toCode()} {operator} {(right as DartToCode).toCode()}" }
}
impl DartPrefixOperator: DartToCode {
  fun toCode(): String { "{operator}{(target as DartToCode).toCode()}" }
}
impl DartAssignment: DartToCode {
  fun toCode(): String {
    "{(left as DartToCode).toCode()} = {(right as DartToCode).toCode()}"
  }
}
impl DartClosure: DartToCode {
  fun toCode(): String {
    let parameters = parametersToCode(
      (requiredParameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
      (positionalParameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
      (namedParameters as Iterable<DartParameter>).map<String>({ (it as DartToCode).toCode() }),
    )
    mut let s = "({parameters}) {(body as DartToCode).toCode()}"
    if body is DartInlineBody {
      s = "{s};"
    }
    s
  }
}

impl DartStatement: DartToCode
impl DartExpressionStatement: DartToCode {
  fun toCode(): String { "{(expression as DartToCode).toCode()};" }
}
impl DartReturn: DartToCode {
  fun toCode(): String {
    if expression is Some {
      "return {(expression.unwrap() as DartToCode).toCode()};"
    } else {
      "return;"
    }
  }
}
impl DartBreak: DartToCode {
  fun toCode(): String {
    if label is Some {
      "break {label.unwrap()};"
    } else {
      "break;"
    }
  }
}
impl DartContinue: DartToCode {
  fun toCode(): String {
    if label is Some {
      "continue {label.unwrap()};"
    } else {
      "continue;"
    }
  }
}
impl DartIf: DartToCode {
  fun toCode(): String {
    mut let s = "if ({(condition as DartToCode).toCode()}) {(then as DartToCode).toCode()}"
    if else_ is Some {
      s = "{s} else {(else_.unwrap() as DartToCode).toCode()}"
    }
    s
  }
}
impl DartWhile: DartToCode {
  fun toCode(): String {
    mut let s = "while ({(condition as DartToCode).toCode()})"
    if label is Some {
      s = "{label.unwrap()}:\n{s}"
    }
    "{s} {indent((body as DartToCode).toCode())}"
  }
}
