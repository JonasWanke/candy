[print] = use "Builtins"
[result, text] = use "Core"

main := { environment ->
  (path,) = environment.arguments

  file = environment.file.open path | result.unwrap
  print "File: {file}"

  bytes = file | environment.file.readToEnd | result.unwrap
  print "Bytes: {bytes}"
  text = bytes | text.fromUtf8 | result.unwrap
  print "Text: {text}"

  file | environment.file.close
  print "File: {file}"
}
