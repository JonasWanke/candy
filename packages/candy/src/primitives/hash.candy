use ...collections
use ...primitives

trait Hasher<Result> {
  /// A trait for hashing an arbitrary stream of bytes.

  // TODO(marcelgarus): Provide a write method for `List<Uint8>` and then reduce some types like
  // `Int8`, `Bool` etc. to those.
  fun write(value: Int)
  fun write(value: List<Int>)

  fun finish(): Result
}

trait Hash {
  /// Implemented by types that can be hashed.

  fun hash<Result>(hasher: Hasher<Result>)
}
