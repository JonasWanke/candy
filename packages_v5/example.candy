fun isLessThan(a: Int, b: Int) Bool {
  switch a.compareTo(b) {
    less => true,
    equal => false,
    greater => false,
  }
}
fun fibonacci(n: Int) Int {
  switch isLessThan(n, 2) {
    true => n,
    false => fibonacci(n.subtract(1)).add(fibonacci(n.subtract(2))),
  }
}

fun identity[T](t: T) T {
  t
}

