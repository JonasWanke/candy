enum Bool { true, false }
let true: Bool = Bool.true
let false: Bool = Bool.false
fun toText(bool: Bool) Text {
  switch bool {
    true => "true",
    false => "false",
  }
}

enum Ordering { less, equal, greater }
fun toText(ordering: Ordering) Text {
  switch ordering {
    less => "less",
    equal => "equal",
    greater => "greater",
  }
}

