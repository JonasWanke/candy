{
  "name": "candy",
  "displayName": "üç≠¬†Candy",
  "description": "Candy language support",
  "publisher": "üç≠¬†Candy",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/candy-lang/candy.git",
    "directory": "new-new-packages/vscode_extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Debuggers"
  ],
  "activationEvents": [
    "workspaceContains:**/*.candy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "candy.hints.valueColor",
        "description": "The color of hints indicating the value of an expression. If not supplied, the color for `tab.inactiveForeground` will be used.",
        "defaults": {
          "dark": "tab.inactiveForeground",
          "light": "tab.inactiveForeground",
          "highContrast": "tab.inactiveForeground"
        }
      },
      {
        "id": "candy.hints.panicColor",
        "description": "The text color of hints indicating that the code panics. If not supplied, the color for `editorError.foreground` will be used.",
        "defaults": {
          "dark": "editorError.foreground",
          "light": "editorError.foreground",
          "highContrast": "editorError.foreground"
        }
      },
      {
        "id": "candy.hints.fuzzColor",
        "description": "The text color of hints indicating that a function panics for a certain input. If not supplied, the color for `editorError.foreground` will be used.",
        "defaults": {
          "dark": "editorError.foreground",
          "light": "editorError.foreground",
          "highContrast": "editorError.foreground"
        }
      }
    ],
    "commands": [
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewRcst",
        "title": "View RCST"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewAst",
        "title": "View AST"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewHir",
        "title": "View HIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewMir",
        "title": "View MIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewOptimizedMir",
        "title": "View Optimized MIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewLir",
        "title": "View LIR"
      }
    ],
    "configuration": {
      "title": "üç≠¬†Candy",
      "properties": {
        "candy.languageServerCommand": {
          "type": "string",
          "default": "",
          "markdownDescription": "Command to start the üç≠¬†Candy language server. If empty, we'll attempt to find the üç≠¬†Candy executable in the `PATH` environment variable.",
          "scope": "machine"
        },
        "candy.packagesPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path of a folder containing all packages.",
          "scope": "machine"
        }
      }
    },
    "configurationDefaults": {
      "[candy]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2
      }
    },
    "debuggers": [
      {
        "type": "candy",
        "label": "üç≠ Candy",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "markdownDescription": "Path to the program to start (e.g., `_.candy`)"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "üç≠ Candy: Launch",
            "description": "Launch and debug a üç≠ Candy app",
            "body": {
              "type": "candy",
              "name": "üç≠ Candy",
              "request": "launch",
              "program": "^\"_.candy\""
            }
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "candy",
        "extensions": [
          ".candy"
        ],
        "aliases": [
          "üç≠¬†Candy"
        ],
        "configuration": "./declarative/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.59.0",
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.3",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "glob": "^10.2.6",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "vscode-test": "^1.4.0"
  }
}
